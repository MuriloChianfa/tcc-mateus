<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Botões enviar e receber -->

    <Button
        android:id="@+id/botaoEnviar"
        android:layout_width="97dp"
        android:layout_height="98dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/send"
        android:textSize="24sp" />

    <!-- Avatar inicial -->

    <Button
        android:id="@+id/botaoReceber"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="225dp"
        android:layout_marginRight="225dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/receive" />

    <!-- Botões boca, olhos, nariz e sombracelhas -->

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="435dp"
        android:layout_height="340dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="85dp" />

    <Button
        android:id="@+id/botaoOlhos"
        android:layout_width="171dp"
        android:layout_height="82dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
